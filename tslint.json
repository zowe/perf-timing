{
  "extends": "tslint:latest",
  "rulesDirectory": ["tslint-consistent-codestyle", "node_modules/tslint-eslint-rules/dist/rules", "./lint-rules/lib"],
  "rules": {
    "completed-docs": true,
    "indent": false,
    "jsdoc-format": true,
    "max-line-length": [
      true,
      150
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "protected-static-field",
          "private-static-field",
          "public-static-method",
          "protected-static-method",
          "private-static-method",
          "public-instance-field",
          "protected-instance-field",
          "private-instance-field",
          "constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ],
        "alphabetize": true
      }
    ],
    "naming-convention": [
      true,
      {"type": "member", "modifiers": "private", "leadingUnderscore": "require"},
      {"type": "member", "modifiers": ["static", "readonly"], "format": "UPPER_CASE"},
      {"type": "member", "modifiers": ["readonly"], "format": "camelCase"},
      {"type": "class", "modifiers": "abstract", "prefix": "Abstract"}
    ],
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "no-magic-numbers": [
      true,
      -1,
      0,
      1,
      2
    ],
    "no-redundant-jsdoc": true,
    "no-static-this": true,
    "no-submodule-imports": true,
    "no-unnecessary-class": true,
    "no-unused": true,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "one-line": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "grouped-imports": false
      }
    ],
    "prefer-conditional-expression": false,
    "space-before-function-paren": false,
    "space-within-parens": false,
    "ter-indent": [true, 4],
    "trailing-comma": false,
    "valid-jsdoc": [true, {
        "prefer": {
          "return": "returns"
        },
        "requireReturn": false,
        "requireParamDescription": true,
        "requireReturnDescription": true,
        "matchDescription": "\\.$",
        "requireParamType": false,
        "requireReturnType": false
    }],
    "valid-license-header": [true, "LICENSE_HEADER"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "whitespace": [true, "check-module"]
  },
  "type-check": true
}
