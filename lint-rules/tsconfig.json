{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "esnext"
    ],
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "declaration": false,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "pretty": true,
    "sourceMap": false,
    "newLine": "lf"
  },
  "typeRoots": [
    "../node_modules/@types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/*.spec.ts",
    "**/*-spec.ts",
    "**/*.test.ts"
  ]
}