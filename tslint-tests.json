
{
  "extends": "./tslint.json",
  "rules": {
    "no-implicit-dependencies": [true, "dev", "optional"],
    "no-submodule-imports": false,
    "only-arrow-functions": false,
    "space-before-function-paren": false
  },
  "type-check": true,
  "linterOptions": {
    "exclude": ["**/node_modules/**/*", "__tests__/__results__/**", "**/*.d.ts"]
  }
}